#!/bin/bash

# gcc-shenango.bldconf - configuration file for PARSEC

if [[ -z "$SHENANGODIR" ]]; then
    echo "Must provide SHENANGODIR in environment"
    exit 1
fi

source ${PARSECDIR}/config/gcc.bldconf

LDFLAGS="-L${SHENANGODIR}/ -T ${SHENANGODIR}/base/base.ld -no-pie -lruntime -lnet -lbase ${LDFLAGS}"
CFLAGS="-g -DSHENANGO -I${SHENANGODIR}/inc ${CFLAGS}"
CXXFLAGS="-DSHENANGO -I${SHENANGODIR}/inc ${CXXFLAGS}"
